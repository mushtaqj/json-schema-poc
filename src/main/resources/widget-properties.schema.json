{
  "$id": "http://cambio.se/schemas/widget-properties.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "Represents a single widget",
  "examples": [
    {
      "formControlName": "clinicalParameterWidget",
      "color": "Extended1",
      "size": {
        "width": 2,
        "height": 2
      }
    }
  ],
  "title": "The root schema",
  "type": "object",
  "properties": {
    "formControlName": {
      "$ref": "definitions.schema.json#/definitions/formControlName"
    },
    "color": {
      "$ref": "definitions.schema.json#/definitions/color"
    },
    "size": {
      "$id": "#/properties/size",
      "type": "object",
      "title": "The dimensions schema",
      "description": "An explanation about the purpose of this instance.",
      "default": {
        "width": 2,
        "height": 2
      },
      "examples": [
        {
          "width": 2,
          "height": 2
        }
      ],
      "required": [
        "width",
        "height"
      ],
      "properties": {
        "width": {
          "$id": "#/properties/dimensions/properties/width",
          "default": 1,
          "description": "An explanation about the purpose of this instance.",
          "examples": [
            1
          ],
          "maximum": 2,
          "minimum": 1,
          "title": "The width schema",
          "type": "integer"
        },
        "height": {
          "$id": "#/properties/dimensions/properties/height",
          "default": 1,
          "description": "An explanation about the purpose of this instance.",
          "examples": [
            2
          ],
          "title": "The height schema",
          "maximum": 2,
          "minimum": 1,
          "type": "integer"
        }
      }
    }
  },
  "additionalProperties": true
}