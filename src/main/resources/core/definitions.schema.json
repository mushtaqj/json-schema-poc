{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://cambio.se/schemas/definitions.json",
  "type": "object",
  "description": "Common Shared definitions for Widget Properties",
  "definitions": {
    "template": {
      "type": "object",
      "title": "Template Property",
      "properties": {
        "apiUrl": {
          "type": "string",
          "format": "uri"
        },
        "valueKey": {
          "type": "string"
        },
        "idKey": {
          "type": "string"
        }
      },
      "required": [
        "apiUrl",
        "valueKey",
        "idKey"
      ],
      "additionalProperties": false
    },
    "color": {
      "$id": "#/properties/color",
      "description": "The color given to the widget title",
      "examples": [
        "Extended1"
      ],
      "title": "The color schema",
      "enum": [
        "Extended1",
        "Extended2",
        "Extended3",
        "Extended4",
        "Extended5",
        "Extended6",
        "Extended7",
        "Extended8",
        "Extended9",
        "Extended10",
        "Extended11",
        "Extended12",
        "Extended13",
        "Extended14"
      ],
      "type": "string",
      "additionalProperties": false
    },
    "formControlName": {
      "$id": "#/properties/formControlName",
      "type": "string",
      "title": "Form Control Name for the widget",
      "description": "A name referenced by the dashboard to send/receive events from the widget, should be unique",
      "examples": [
        "clinicalParameterWidgetFormControl"
      ],
      "minLength": 5,
      "additionalProperties": false
    },
    "size": {
      "$id": "#/properties/size",
      "type": "object",
      "title": "The size schema",
      "description": "An explanation about the purpose of this instance.",
      "default": {
        "width": 1,
        "height": 1
      },
      "examples": [
        {
          "width": 1,
          "height": 1
        }
      ],
      "required": [
        "width",
        "height"
      ],
      "properties": {
        "width": {
          "$id": "#/properties/dimensions/properties/width",
          "default": 1,
          "examples": [
            1
          ],
          "maximum": 1,
          "minimum": 1,
          "title": "The width of the Widget",
          "type": "integer"
        },
        "height": {
          "$id": "#/properties/dimensions/properties/height",
          "default": 1,
          "examples": [
            1
          ],
          "title": "The height schema",
          "maximum": 1,
          "minimum": 1,
          "type": "integer"
        }
      },
      "additionalProperties": false
    }
  }
}